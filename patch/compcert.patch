+Lemma uniq_map_fst : forall (E:list (atom*X))
+  (H1: uniq E) (F:list (atom*X)) (H2: List.map fst E = List.map fst F),
+  uniq F.
+Proof.
+  induction 1; destruct F as [|[] ?]; simpl; intros; auto.
+    congruence.
+
+    simpl_env.
+    inversion H2; subst.
+    constructor; auto.
+      apply map_fst_dom in H4. fsetdec.
+Qed.
