+Lemma map_fst_dom : forall (E:list (atom*X))
+  (F:list (atom*X)) (H1: List.map fst E = List.map fst F),
+  dom E [=] dom F.
+Proof.
+  induction E as [|[] ?]; destruct F as [|[] ?]; simpl; 
+    intros; inversion H1; subst.
+    fsetdec.
+    apply IHE in H2. fsetdec. 
+Qed.
